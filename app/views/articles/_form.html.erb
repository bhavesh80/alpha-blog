
<% if @article.errors.any? %>
<h2>the following errors prevented the article from created </h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
    <% end %>
</ul>
<% end %>


<%= form_for @article do |t| %>

<p>
<%= t.label :title %> <br/>
<%= t.text_field :title %>
</p>

<p>
<%= t.label :description %> <br />
<%= t.text_area :description %>
</p>

<%= t.submit %>
<% end %>
<%= link_to "back to Articles listing" , articles_path %>